<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <AssemblyName>dotnet-octopus</AssemblyName>
    <RootNamespace>Dotnet.Octopus</RootNamespace>
    <PackageType>DotnetCliTool</PackageType>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <LangVersion>7.1</LangVersion>
  </PropertyGroup>
  
  <PropertyGroup>
    <PackageId>dotnet-n17solutions-octopus</PackageId>
    <Title>N17 Solutions Octopus Deploy DotNet CLI</Title>
    <Description>Allows creation and promotion of releases within Octopus Deploy</Description>
    <Authors>James Woodley</Authors>
    <PackageTags>octopus deploy n17 solutions n17solutions dotnet cli</PackageTags>
    <WebPage>https://github.com/n17solutions/dotnet-octopus</WebPage>
    <PackageIconUrl>http://www.n17solutions.com/assets/images/logo-dark%20background.png</PackageIconUrl>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.CommandLineUtils" Version="1.1.1" />
    <PackageReference Include="Octopus.Client" Version="4.36.2" />
  </ItemGroup>
</Project>